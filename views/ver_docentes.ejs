<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Foundation | Welcome</title>
    <link rel="stylesheet" href="..css/foundation.min.css">
    <link rel="stylesheet" href="../css/foundation.css">
    <link rel="stylesheet" href="../css/app.css">
    <style type="text/css">
      .boton{

      }
    </style>
</head>

<body>
    <div class="off-canvas-wrapper">
        <div class="off-canvas-wrapper-inner" data-off-canvas-wrapper>
            <div class="off-canvas position-left reveal-for-large" id="my-info" data-off-canvas data-position="left">
                <div class="row column">
                    <br>
                    <ul class="accordion" data-accordion>
                      <li class="accordion-item is-active" data-accordion-item>
                        <a href="#" class="accordion-title">Docentes</a>
                        <div class="accordion-content" data-tab-content >
                          <ul class="vertical menu">
                              <li><a href="http://localhost:8888/admin/docente">Ver Docentes</a></li>
                              <li><a href="http://localhost:8888/admin/add_docente">Añadir Docente</a></li>
                           </ul>
                        </div>
                      </li>
                      <li class="accordion-item" data-accordion-item>
                        <a href="#" class="accordion-title">Rubricas</a>
                        <div class="accordion-content" data-tab-content>
                           <ul class="vertical menu">
                              <li><a href="http://localhost:8888/admin/rubrica">Ver Rubricas</a></li>
                              <li><a href="http://localhost:8888/admin/add_rubrica">Añadir Rubrica</a></li>
                           </ul>
                        </div>
                      </li>
                      <li class="accordion-item" data-accordion-item>
                        <a href="#" class="accordion-title">Alumnos</a>
                        <div class="accordion-content" data-tab-content>
                           <ul class="vertical menu">
                              <li><a href="http://localhost:8888/admin/alumno">Ver Alumnos</a></li>
                              <li><a href="http://localhost:8888/admin/add_alumno">Añadir Alumno</a></li>
                           </ul>
                        </div>
                      </li>
                      <li class="accordion-item" data-accordion-item>
                        <a href="#" class="accordion-title">Usuarios</a>
                        <div class="accordion-content" data-tab-content>
                           <ul class="vertical menu">
                              <li><a href="http://localhost:8888/admin/usuario">Ver Usuarios</a></li>
                              <li><a href="http://localhost:8888/admin/add_usuario">Añadir Usuario</a></li>
                           </ul>
                        </div>
                      </li>
                    </ul>

                </div>
            </div>
            <div class="off-canvas-content" data-off-canvas-content>
                
                <div class="callout primary">
                    <div class="row column">
                        <h1>Panel Administrador </h1>
                        <p class="lead">Bienvenido <%= usuario %>.</p>
                    </div>
                </div>
                
                <div class="top-bar" id="example-menu">
                  <div class="top-bar-left">
                    <ul class="dropdown menu" data-dropdown-menu>
                      <li class="menu-text">Lista de Profesores</li>
                      
                    </ul>
                  </div>
                  <div class="top-bar-right">
                    <ul class="menu">
                      <li><input type="search" placeholder="Search"></li>
                      <li><button type="button" class="button">Search</button></li>
                    </ul>
                  </div>
                </div>
                <table>
                  <thead>
                    <tr>
                      <th width="100">Nombre</th>
                      <th width="100">Apellido</th>
                      <th width="100">Curso</th>
                      <th width="100">Grado</th>
                      <th width="100">Sección</th>
                      <th width="100">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% profesor.forEach(function(profe) { %>
                    <tr>
                      <td><%= profe.nombre %></td>
                      <td><%= profe.apellido %></td>
                      <td><%= profe.curso %></td>
                      <td><%= profe.grado %></td>
                      <td><%= profe.seccion %></td>
                      <td style="display: inline-flex;">
                        
                          <form method="POST" action="http://localhost:8888/admin/edit_docente_post">
                              <input type="hidden" name="id" value="<%= profe.id %>">
                              <button class="" type="submit" style="background-image: url('../img/editar.png'); background-size: cover; width: 20px; height: 20px;"></button> 
                              
                            
                          </form>
                           <form method="POST" action="http://localhost:8888/admin/delete_docente_post">
                              <input type="hidden" name="id" value="<%= profe.id %>">
                            <button class="" type="submit" style="background-image: url('../img/cerrar.png'); background-size: cover; width: 20px; height: 20px; margin-left: 5px;"></button> 
                          </form>
                       
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
    <script>
        $(document).foundation();
    </script>
</body>

</html>